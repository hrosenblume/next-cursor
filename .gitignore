# =============================================================================
# .gitignore for Next.js Starter Template
# =============================================================================

# -----------------------------------------------------------------------------
# Dependencies
# -----------------------------------------------------------------------------
node_modules/
.pnp
.pnp.js

# -----------------------------------------------------------------------------
# Next.js Build Output
# -----------------------------------------------------------------------------
.next/
out/

# -----------------------------------------------------------------------------
# Production Build
# -----------------------------------------------------------------------------
build/

# -----------------------------------------------------------------------------
# Environment Variables
# -----------------------------------------------------------------------------
# .env is committed with non-secret defaults (DATABASE_URL, etc.)
# .env.local contains secrets and overrides .env - NEVER commit this!
!.env
.env.local
.env.development.local
.env.test.local
.env.production.local
.env.production

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
*.db
*.db-journal
prisma/dev.db
prisma/dev.db-journal

# -----------------------------------------------------------------------------
# Debug Logs
# -----------------------------------------------------------------------------
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# -----------------------------------------------------------------------------
# IDE & Editor
# -----------------------------------------------------------------------------
.idea/
.vscode/
*.swp
*.swo
*~

# -----------------------------------------------------------------------------
# OS Files
# -----------------------------------------------------------------------------
.DS_Store
Thumbs.db

# -----------------------------------------------------------------------------
# TypeScript
# -----------------------------------------------------------------------------
*.tsbuildinfo

# -----------------------------------------------------------------------------
# Testing
# -----------------------------------------------------------------------------
coverage/

# -----------------------------------------------------------------------------
# Misc
# -----------------------------------------------------------------------------
.vercel
*.log

# -----------------------------------------------------------------------------
# Planning (keep public, ignore drafts)
# -----------------------------------------------------------------------------
plans/tmp/

